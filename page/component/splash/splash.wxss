.main-view{
  width: 100%;
  height: 100%;
  text-align: center;
  background: #fff;
}

.hint-info{
  text-align: center;
  color: #999999;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.auth-btn{
  width: 250rpx;
  margin-top: 60rpx;
  font-size: 34rpx;
  color: #fff;
  background: #F84464;
  border-radius: 40rpx;
  border: 1rpx solid #fff;
}
.auth-btn::after{
  border: none;
}

.not-can-buy{
  width: 80%;
  color: #999999;
  font-size: 150rpx;
  border: 1rpx solid #999999;
  border-radius: 20rpx;
  position: absolute;
  margin-left: 10%;
  margin-top: 40%;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  background: #fff;
}