.dialog-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.dialog-info{
  position: fixed;
  z-index: 5000;
  width: 70%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 3rpx;
  overflow: hidden;
  padding: 60rpx;
}
.dialog-title{
  height: 60rpx;
  font-size: 34rpx;
  color: #000;
  border-bottom: 2rpx solid #5d5d5d;
}
.dialog-content{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  word-wrap: break-word;
  word-break: break-all;
  color: #555;
}
.dialog-remark{
  font-size: 34rpx;
  color: #000;
}
.dialog-footer{
  display: flex;
  align-items: center;
  position: relative;
  line-height: 90rpx;
  font-size: 34rpx;
}
.dialog-btn{
  margin-top: 40rpx;
  display: block;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  font-size: 34rpx;
  color: #fff;
  background: #000;
  border-radius: 0rpx;
}
.dialog-btn::after{
  border: none;
}
.close-dialog{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}